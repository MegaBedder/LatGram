#!/usr/bin/latino
incluir('bot')

mientras verdadero

res = json->decodificar(actualizaciones())
incluir('res')

elegir(msg->texto)

 caso "/start":
	ayuda = {"inline_keyboard":[
 	[{"text":"Programación Latino","url":"https://github.com/primitivorm/latino"},
 	{"text":"Repositorio del Bot","url":"https://github.com/jarriztg/telegram-bot-latino"}]
 	]}
	
	enviarTeclado(chat->id, "¡Hey! ".usuario->nombre."\n\nEstás probando el nuevo bot escrito completamente en la *programación Latino*. Por el momento faltan cosas. Pero de poco a poco irá mejorando 😄👍", convertir->cadena(ayuda), markdown)
  
 caso "/id":
	enviarMensaje(chat->id, "*Id* ".usuario->id."\n*Chat Id* ".chat->id, markdown, msg->id)

 caso "/foto":
 	enviarFoto(chat->id, "https://raw.githubusercontent.com/lenguaje-latino/latino-sublimetext-plugin/master/latino_sublime.png", "Sublime Text sintaxis Latino")

 caso "/juego":
 	enviarJuego(chat->id, "juego", falso, msg->id)

 caso "#miembros":
 	miembros = obtenerCuentaMiembros(chat->id)
 	enviarMensaje(chat->id, "Miembros\n*".miembros."*", markdown, msg->id)

fin

elegir(inline->consulta)
  caso "latino":
  	 latino = textoInline(inline->id, "GitHub Latino", "[latino](https://github.com/primitivorm/latino)", "listas", markdown)
  	 enviarConsultaInline(inline->id, latino)

fin

si nuevo_usuario->id
	enviarMensaje(chat->id, "Hola ".nuevo_usuario->nombre.", bienvenido a ".chat->titulo)
osi msg->texto
	imprimir(msg->texto." desde ".usuario->nombre)
fin

fin
